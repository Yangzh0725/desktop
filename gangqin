<script src="../material/sound.js"></script>
<script>
    var oli = document.querySelectorAll("li")
    for(var i=0;i<oli.length;i++){
        oli[i].index = i
        oli[i].onmousedown = function(){
            this.className = "on";
            var audio = new Audio;
            audio.src=oggSound["sound"+(this.index+49)];
            audio.play();
        }
        oli[i].onmouseup = function(ev){
            this.className = "";
            
        }
    }
</script>
